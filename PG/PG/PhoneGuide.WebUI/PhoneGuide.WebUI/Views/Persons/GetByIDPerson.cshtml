@model PhoneGuide.WebUI.Models.PersonDetailModel
@{
    ViewBag.Title = "GetByIDPerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="container">
    <div class="col-lg-6">

        @using (Html.BeginForm("UpdatePerson", "Persons", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Name")
                @Html.TextBoxFor(x => x.Person.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Last Name")
                @Html.TextBoxFor(x => x.Person.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Name")
                @Html.TextBoxFor(x => x.Person.City, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Name")
                @Html.TextBoxFor(x => x.Person.Country, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Name")
                @Html.TextBoxFor(x => x.Person.Email, new { @class = "form-control" })
            </div>
            @Html.HiddenFor(x => x.Person.PersonID)
            <button class="btn btn-primary" type="submit">Kaydet</button>
        }
    </div>
    


