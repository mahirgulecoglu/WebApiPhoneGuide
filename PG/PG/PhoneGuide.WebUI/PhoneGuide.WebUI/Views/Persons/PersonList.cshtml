@model IEnumerable<PhoneGuide.WebUI.Models.Persons>

@{
    ViewBag.Title = "PersonList";
}
<p>
    <a class="btn btn-primary" href="~/Persons/PersonForm">New Person Add</a>
</p>
<p style="color:red">Kişiyi silmeden önce lütfen Numaralarını siliniz</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>Detail</th>
        <th>PhoneNumbers</th>
        <th>Delete</th>

    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            <a class="btn btn-primary btn-sm" href="~/Persons/GetByIDPerson/@item.PersonID">Detail</a>
        </td>
        <td>
            <a class="btn btn-success btn-sm" href="~/Phones/GetPersonPhones/@item.PersonID">PhoneNumbers</a>
        </td>
        <td>
            <a class="btn btn-warning btn-sm" href="~/Persons/DeletePerson/@item.PersonID">Delete</a>
        </td>
    </tr>
    }

</table>
