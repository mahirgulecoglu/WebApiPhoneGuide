@model IEnumerable<PhoneGuide.WebUI.Models.Phones>

@{
    ViewBag.Title = "GetPersonPhones";
}
<p>
    <a class="btn btn-primary btn-xs" href="~/Phones/NewPhoneForm">New Phone Number Add</a>
</p>
<p>
    <a class="btn btn-primary btn-xs" href="~/Persons/PersonList">Person List</a>
</p>
@if (Model.Count() == 0)
{
    <hr />
   
    <h4><b></b></h4>
}
else
{
    <table class="table">
        <tr>
            <th>PersonID</th>
            <th>Category</th>
            <th>Phone Number</th>
            <th>Delete</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PersonID</td>
                <td>
                    @item.Category
                </td>
                <td>
                    @item.PhoneNumber
                </td>
                <td>
                <a class="btn btn-danger btn-sm" href="~/Phones/DeletePhone/@item.TelephoneID">Delete</a>
                </td>
            </tr>
        }

    </table>
}



